{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"]
    },
    "noEmit": false
  },
  "include": ["src", "src/**/*", "../src", "../src/**/*"],
  "exclude": [
    // Web build should ignore test suites
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    // Also ignore any test/spec files pulled in from the shared src folder
    "../src/**/*.test.ts",
    "../src/**/*.test.tsx",
    "../src/**/*.spec.ts",
    "../src/**/*.spec.tsx"
  ]
}
